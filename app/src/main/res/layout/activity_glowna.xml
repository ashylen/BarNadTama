<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Glowna"
    android:background="@drawable/background"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:id="@+id/btgoogle"
                android:background="@drawable/image_google"
                />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/btfb"
                android:background="@drawable/image_fb"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:id="@+id/btzadzwon"
                android:background="@drawable/zadzwon"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Galeria"
                android:id="@+id/btgaleria"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/newbutton"
                android:layout_weight="0.10"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_below="@+id/btmenu"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Dowozy"
                android:id="@+id/btdowozy"
                android:background="@drawable/newbutton"
                android:layout_weight="0.10"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_below="@+id/btgaleria"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:text="Wyjscie"
                android:id="@+id/btexit"
                android:background="@drawable/newbutton"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_weight="0.10"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Menu"
                android:id="@+id/btmenu"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/newbutton"
                android:layout_weight="0.10"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Promocje"
                android:id="@+id/btpromocje"
                android:background="@drawable/newbutton"
                android:layout_weight="0.10"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_below="@+id/btdowozy"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Mapa dojazdu"
                android:id="@+id/btmapa"
                android:background="@drawable/newbutton"
                android:layout_weight="0.10"
                android:textSize="25dp"
                android:capitalize="words"
                android:textColor="#000000"
                android:layout_below="@+id/btpromocje"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
